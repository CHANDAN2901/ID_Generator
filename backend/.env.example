# Backend environment variables
NODE_ENV=development
PORT=5000

# MongoDB connection string (use your local or Atlas URI)
MONGO_URI=mongodb://localhost:27017/id_generator

# CORS: where your frontend runs
CLIENT_ORIGIN=http://localhost:5173

# File storage
# local or s3
STORAGE_DRIVER=local
# Used when STORAGE_DRIVER=local
UPLOAD_DIR=uploads
# Used when STORAGE_DRIVER=s3
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Max upload size in MB (for template images and Excel files)
MAX_UPLOAD_MB=20

